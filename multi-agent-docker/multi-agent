pipeline {
  agent any

  stages {
    stage('Run in Node container') {
      steps {
        script {
          docker.image('node:16-alpine').inside {
            sh 'node --version'
          }
        }
      }
    }

    stage('Run in Python container') {
      steps {
        script {
          docker.image('python:3-slim').inside {
            sh 'python --version'
          }
        }
      }
    }
  }
}
