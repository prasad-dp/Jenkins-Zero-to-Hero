pipeline {
  agent none

  stages {
    stage('Using agent with Node') {
      agent {
        docker {
          image 'node:16-alpine'
        }
      }
      steps {
        sh 'node --version'
      }
    }

    stage('Using agent with Python') {
      agent {
        docker {
          image 'python:3-slim'
        }
      }
      steps {
        sh 'python --version'
      }
    }
  }
}
