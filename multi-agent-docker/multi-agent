pipeline {
  agent none

  stages {
    stage('Python Version') {
      agent {
        docker {
          image 'python:3-slim'
          label 'docker-agent'  
        }
      }
      steps {
        sh 'python --version'
      }
    }

    stage('Node Version') {
      agent {
        docker {
          image 'node:16-alpine'
          label 'docker-agent' 
        }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
